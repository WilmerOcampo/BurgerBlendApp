<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailFoodActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_foodNameDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/textView_nameFoodDetail"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageView_buttonCloseFoodDetail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView_buttonCloseFoodDetail" />

                <ImageView
                    android:id="@+id/imageView_buttonCloseFoodDetail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:elevation="2dp"
                    android:src="@drawable/baseline_cancel_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/orange" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView_categoryFoodDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_sPriceFoodDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="S/. "
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView_imageFoodDetail"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="@drawable/background_white_radius"
                android:clipToOutline="true"
                app:srcCompat="@drawable/veggie_burger" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imageView_buttonMinusOrderFoodDetail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/orange_button"
                    app:srcCompat="@drawable/baseline_arrow_circle_minus_24"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/textView_quantityOrderFoodDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView_buttonPlusOrderFoodDetail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/orange_button"
                    app:srcCompat="@drawable/baseline_arrow_circle_plus_24"
                    app:tint="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView_descriptionFoodDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="16dp"
                android:text="DescripciÃ³n"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/text_background"/>

            <TextView
                android:id="@+id/textView_buttonAddToCartFoodDetail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/text_add"
                android:background="@drawable/orange_button"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:elevation="2dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
